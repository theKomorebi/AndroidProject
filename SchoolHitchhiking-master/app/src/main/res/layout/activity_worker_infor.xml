<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".message_object.workerInforActivity"
    android:background="@drawable/infor">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <TextView
            android:id="@+id/infor_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:text="接单人昵称:王伟锋"
            android:textSize="23sp"
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/infor_realName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="接单人姓名:王伟锋"
            android:textSize="23sp"
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/infor_telNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="手机号码:12321312313"
            android:textSize="23sp"
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/infor_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="宿舍住址:12321312313"
            android:textSize="23sp"
            android:textColor="#fff"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="65dp">
            <Button
                android:id="@+id/infor_back"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="返回订单界面"
                android:textColor="#fff"
                android:background="#1E90FF"
                android:textSize="25sp"/>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>