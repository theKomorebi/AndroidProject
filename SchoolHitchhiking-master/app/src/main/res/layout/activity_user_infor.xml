<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userInfor.userInforActivity"
    android:background="@drawable/infor">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <TextView
            android:id="@+id/infor_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:text="我的昵称:王伟锋"
            android:textSize="23sp"
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/infor_realName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="我的姓名:王伟锋"
            android:textSize="23sp"
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/infor_telNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="手机号码:12321312313"
            android:textSize="23sp"
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/infor_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="我的宿舍住址:12321312313"
            android:textSize="23sp"
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/infor_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="当前账户余额:1000"
            android:textSize="23sp"
            android:textColor="#fff"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="65dp">
            <Button
                android:id="@+id/infor_back"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="返回用户界面"
                android:textColor="#fff"
                android:background="#1E90FF"
                android:textSize="25sp"/>
            <Button
                android:id="@+id/infor_revise"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:textColor="#fff"
                android:background="#1E90FF"
                android:text="修改登录密码"
                android:textSize="25sp"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>