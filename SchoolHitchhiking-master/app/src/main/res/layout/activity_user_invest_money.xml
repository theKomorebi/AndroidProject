<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userInfor.userInvestMoneyActivity"
    android:background="@drawable/order">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp">
            <EditText
                android:id="@+id/invest_money_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:hint="请输入充值金额（元）"
                android:textColorHint="#999"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:inputType="number"/>
            <RadioGroup
                android:id="@+id/invest_money_rg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="40dp">
                <RadioButton
                    android:id="@+id/invest_money_weixin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#AEEEEE"
                    android:text="微信"
                    android:checked="true"/>
                <RadioButton
                    android:id="@+id/invest_money_zhifubao"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#AEEEEE"
                    android:text="支付宝"/>
            </RadioGroup>
            <Button
                android:id="@+id/invest_money_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#fff"
                android:background="#AEEEEE"
                android:text="确认充值"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>